<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.kxm.kcgl.mapper.FuncMapper">

	<resultMap id="Func" type="com.kxm.kcgl.domain.Func">
		<result property="id" column="ID" jdbcType="DECIMAL" />
		<result property="name" column="name" jdbcType="VARCHAR" />
	</resultMap>

	<!-- 用于select查询公用抽取的列 -->
	<sql id="columns">
	    <![CDATA[
		ID,NAME
	    ]]>
	</sql>

	<update id="updateSelectiveByPk">
    <![CDATA[
        UPDATE T_Func SET
	        name = #{name} ,
	        description = #{description}
        WHERE 
	        ID = #{id} 
    ]]>
	</update>

	<delete id="deleteByPk" parameterType="string">
	    <![CDATA[
	        DELETE FROM T_Func WHERE ID = #{id} 
	    ]]>
	</delete>

	<select id="selectSelective" resultMap="Func">
		SELECT
		<include refid="columns" />
		FROM T_Func
		<include refid="where_condition" />
	</select>

	<select id="countBySelective" resultType="Func">
		SELECT count(*) FROM T_Func
		<include refid="where_condition" />
	</select>

	<select id="selectByPk" resultMap="Func">
		SELECT
		<include refid="columns" />
	    <![CDATA[
		    FROM T_Func
	        WHERE ID = #{id} 
	    ]]>
	</select>

	<sql id="where_condition">
		<where>
	    	<if test=" id != null" >
     			AND ID = #{id}
    		</if>
    		<if test=" name != null" >
     			AND name = #{name}
    		</if>
		</where>
	</sql>
</mapper>

